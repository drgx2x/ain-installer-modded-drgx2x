echo -e "$DB **$G INSTALL XDERM-MINI                 *    ain 1    $DB**"
echo -e "$DB **$G INSTALL XDERM-MINI-GUI             *    ain 2    $DB**"
echo -e "$DB **$G FIX DOWNLOAD PHP XDERM-MINI-GUI    *    ain 3    $DB**"
echo -e "$DB **$G INSTALL LOGIN XDERM-MINI-GUI       *    ain 4    $DB**"
